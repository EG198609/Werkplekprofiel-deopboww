<!DOCTYPE html>
<html>
  <body>
    <div id="frame"></div>

    <script>
      // SbId uit de URL van de huidige pagina halen
      const params = new URLSearchParams(window.location.search);
      const sbId = params.get("SbId");

      if (sbId) {
        // Bouw de iFrame-URL op met hetzelfde SbId
        const iframe = document.createElement("iframe");
        iframe.src = `https://82813.afasinsite.nl/nieuw/file/download/KnSubjectReportIn/Rapport.pdf?SbId=${sbId}`;
        iframe.width = "100%";
        iframe.height = "800";
        iframe.style.border = "1px solid black";

        document.getElementById("frame").appendChild(iframe);
      } else {
        document.getElementById("frame").innerText =
          "Geen SbId gevonden in de URL.";
      }
    </script>
  </body>
</html>
